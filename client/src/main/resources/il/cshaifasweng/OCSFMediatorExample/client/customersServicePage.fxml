<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="700.0" prefWidth="900.0" style="-fx-background-color: orange;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.CustomersServiceController">

    <AnchorPane>
        <children>
            <Label layoutX="20" layoutY="10" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Customers Service" />

            <TableView fx:id="complaintTable" layoutX="20" layoutY="40" prefHeight="400" prefWidth="1080">
                <columns>
                    <TableColumn fx:id="complaintColumn"    text="Complaint"     prefWidth="280"/>
                    <TableColumn fx:id="nameColumn"         text="Name"          prefWidth="140"/>
                    <TableColumn fx:id="emailColumn"        text="Email"         prefWidth="180"/>
                    <TableColumn fx:id="restaurantColumn"   text="Restaurant"    prefWidth="160"/>
                    <TableColumn fx:id="submittedAtColumn"  text="Submitted At"  prefWidth="140"/>
                    <TableColumn fx:id="statusColumn"       text="Status"        prefWidth="100"/>

                    <TableColumn fx:id="responseColumn"     text="Response"      prefWidth="220"/>
                    <TableColumn fx:id="refundColumn"       text="Refund (â‚ª)"    prefWidth="110"/>
                    <TableColumn fx:id="actionColumn"       text="Action"        prefWidth="100"/>
                </columns>
            </TableView>


            <Button fx:id="backButton" layoutX="20" layoutY="460" onAction="#goBack" text="Back" />
        </children>
    </AnchorPane>
</ScrollPane>
